{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react",
    "experimentalDecorators": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "bin",
    "node_modules",
    ".eslintrc.js",
    "babel.config.js",
  ]
}